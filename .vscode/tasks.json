{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/waitforshutdown.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Release",
                "-r",
                "win10-x64",
                "-o",
                ".\\bin\\standalone",
                "${workspaceFolder}/waitforshutdown.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}